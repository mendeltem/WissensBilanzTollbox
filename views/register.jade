form.form-horizontal(action='', method="POST")
    fieldset
        #legend
            legend Register
        .control-group
            //User Name
            label.control-label(for= "username") Username
            .controls
                input(type="text", id="username", name="username", placeholder='', class="input-xlarge")
                p.help-block Username can contain any letters or numbers, without spaces
        .control-group
            // E-mail
            label.control-label(for="email") E-mail
            .controls
                input(type="text", id="username", name="username", placeholder="", class="input-xlarge")
                p.help-block Please provide your E-mail
        .control-group
            // Password
            label.control-label(for = "password") Password
            .controls
                input.input-xlarge(type="password", id="password", name="password", placeholder="")
                p.help-block Password should be at least 4 characters
        .control-group
            // Password Confirmation
            label.control-label(for = "password_confirm") Password (Confirm)
            .controls
                input.input-xlarge(type="password", id="password_confirm", name="password_confirm", placeholder="")
                p.help-block Please confirm password
        .control-group
            // Button
            .controls
                button.btn.btn-success Register

